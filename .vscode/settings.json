{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.rulers": [80],
  "saveAndRun": {
    "commands": [
      {
        "match": ".*.pl",
        "cmd": "halt."
      },
      {
        "match": ".*.pl",
        "cmd": "clear; rlwrap /bin/swipl -l ${file}"
      }
    ]
  }
}
